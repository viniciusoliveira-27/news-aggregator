<div class="bg-gray-100 min-h-screen flex items-center justify-center px-4">
  <div class="bg-white p-8 rounded-2xl shadow-lg w-full max-w-md">
    
    <%# Cabeçalho do formulário %>
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-2">Crie sua Conta</h2>
    <p class="text-center text-gray-500 mb-8">É rápido e fácil.</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      
      <%# Exibe as mensagens de erro de validação do Devise de forma estilizada %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <%# Campo de Email %>
      <div>
        <%= f.label :email, class: "block mb-2 text-sm font-bold text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition" %>
      </div>

      <%# Campo de Senha %>
      <div>
        <div class="flex justify-between items-baseline">
          <%= f.label :password, class: "block mb-2 text-sm font-bold text-gray-700" %>
          <% if @minimum_password_length %>
            <em class="text-xs text-gray-500">(mínimo de <%= @minimum_password_length %> caracteres)</em>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition" %>
      </div>

      <%# Campo de Confirmação de Senha %>
      <div>
        <%= f.label :password_confirmation, "Confirme sua senha", class: "block mb-2 text-sm font-bold text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition" %>
      </div>

      <%# Botão de Envio %>
      <div class="actions">
        <%= f.submit "Cadastrar", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded-lg cursor-pointer transition-all duration-300 transform hover:scale-105" %>
      </div>
    <% end %>

    <%# Links compartilhados (para "Já tem uma conta? Faça login") %>
    <div class="text-center mt-6">
      <%= render "devise/shared/links" %>
    </div>
    
  </div>
</div>