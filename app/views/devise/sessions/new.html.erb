<%# Container principal que usa Flexbox para centralizar o formulário na tela %>
<div class="flex flex-col items-center justify-center min-h-[70vh] px-4">
  
  <%# O "card" do formulário com sombra, bordas arredondadas e padding %>
  <div class="w-full max-w-md p-8 space-y-6 bg-white rounded-lg shadow-md">
    
    <h2 class="text-2xl font-bold text-center text-gray-900">
      Entrar na sua conta
    </h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      
      <%# Campo de E-mail %>
      <div>
        <%= f.label :email, "Endereço de e-mail", class: "sr-only" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
            placeholder: "Endereço de e-mail", 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <%# Campo de Senha %>
      <div>
        <%= f.label :password, "Senha", class: "sr-only" %>
        <%= f.password_field :password, autocomplete: "current-password", 
            placeholder: "Senha",
            class: "w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <%# Seção "Lembrar de mim" e "Esqueceu a senha?" %>
      <div class="flex items-center justify-between">
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
            <%= f.label :remember_me, "Lembrar de mim", class: "ml-2 block text-sm text-gray-900" %>
          </div>
        <% end %>

        <div class="text-sm">
          <%= link_to "Esqueceu a senha?", new_password_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %>
        </div>
      </div>

      <%# Botão de Entrar %>
      <div>
        <%= f.submit "Entrar", class: "w-full py-2 px-4 font-semibold text-white bg-blue-600 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
      </div>
    <% end %>

    <div class="text-center text-sm text-gray-600">
        Ainda não tem uma conta?
        <%= link_to "Cadastre-se", new_registration_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %>
    </div>

  </div>
</div>